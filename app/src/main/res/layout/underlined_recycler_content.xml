<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="128dp" android:id="@+id/lilList">

    <view
        class="ninja.maxdome.justtodo.gridRecyclerList.BottomBorderLine"
        id="@+id/lilList_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/lilList_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="      FirstAttend:"
        android:textSize="16dp"
        android:textColor="@color/primary_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lilList_RecycleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lilList_headline"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>